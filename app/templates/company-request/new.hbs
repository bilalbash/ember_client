<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info" >
    <div class="panel-heading">
      <div class="panel-title">Company Sign Up</div>
    </div>

    <div style="padding-top:30px" class="panel-body" >
      {{#each errors.email as |error|}}
      {{error.message}}
      {{/each}}
      {{#if errorMessage}}
        <div id="login-alert" class="alert alert-danger col-sm-12">
          {{errorMessage}}
        </div>
      {{/if}}

      <form class="form-horizontal">
	  <div style="margin-bottom: 25px" class="input-group">
		<span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
		{{input type="text" value=model.name placeholder="Enter company name" class="form-control"}}
	  </div>

	  <div style="margin-bottom: 25px" class="input-group">
		<span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
		{{input type="text" value=model.email placeholder="Enter company admin email" class="form-control"}}
	  </div>

	  <div style="margin-bottom: 25px" class="input-group">
		<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		{{input type="text" value=model.admin_name placeholder="Enter company admin full name" class="form-control"}}
	  </div>

	  <div style="margin-top:10px" class="form-group">
		<div class="col-sm-12 controls">
		  <button {{action 'save'}} class="btn btn-success">Save</button>
		  <button {{action 'cancel'}} class="btn btn-warning">Cancel</button>
		</div>
	  </div>
      </form>
    </div>
  </div>
</div>
